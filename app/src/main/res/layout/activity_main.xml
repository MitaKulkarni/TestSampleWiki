<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding_8_dp"
    tools:context="com.example.samplewiki.activity.MainActivity">

    <AutoCompleteTextView
        android:id="@+id/activity_main_search_at"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8_dp"
        android:textSize="@dimen/text_size_18"
        android:hint="@string/search_text" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/activity_main_search_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_main_search_at"
        android:layout_marginTop="@dimen/margin_8_dp"
        android:scrollbars="none" />

    <ProgressBar
        android:id="@+id/activity_main_progress_bar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone" />

</RelativeLayout>
